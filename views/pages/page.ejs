<% layout( '../layout' ) -%> 
<ol class="breadcrumb">
  <li><a href="#">圖表牆</a></li>
  <li class="active">範例圖表</li>
</ol>
<div class="container-fluid container">
	<h2>範例圖表</h2>

	<input id="page-value" type="text" class="hidden" value="1x6C86tzJ2F8ZTau6g7uUNxSb496wuoIR2s2I9lEWQSI">
	<div class="section-chart index-section">
		<% include chart %>
    <!-- chart save -->
    <div class="row mbl">
      <div class="col-sm-6" >
        <img id="chartImg" src="<%= C3data[0].img %>" alt="" class="img-responsive">
        <canvas id="canvas" style="display:none" width="1000" height="531"></canvas>
        <div class="text-center mtm">
          <button id="updateImg" type="button" class="btn btn-default btn-xs">更新圖片</button>
          <button id="downloadImg" type="button" class="btn btn-default btn-xs">下載圖片</button>
        </div>
      </div>
      <div class="col-sm-6">
        <form action="" class="form">
          <div class="form-group">
            <label for="chartName">圖表名稱</label>
            <input type="text" class="form-control" disabled="" id="chartName" value="<%= C3data[0].name %>" placeholder="圖表名稱">
          </div>
          <div class="form-group">
            <label for="chartKey">Google 試算表 Key </label>
            <input type="text" class="form-control" value="<%= C3data[0].googleId %>" id="chartKey" disabled="">
          </div>
          <div class="form-group">
            <label for="chartDiscription">描述</label>
            <textarea class="form-control" id="chartDiscription" rows="3" placeholder="對你的圖表做點描述" disabled=""><%= C3data[0].description %></textarea>
          </div>
          <div class="text-right">
            <!-- <button type="button" class="btn btn-primary">登入來分享到展示區</button> -->
            <!-- <button type="button" class="btn btn-primary jq-SaveData">儲存</button> -->
            <button type="button" class="jq-fb btn btn-success">發佈FB</button>
          </div>
        </form>
      </div>
    </div>
    <!-- chart save end -->
	</div>
</div>
<script>
pageUserControl = {
  chartType: {
    name: "<%= C3data[0].chartType_name %>",
    value: "<%= C3data[0].chartType_value %>"
  },
  xAxis: {
    name: "<%= C3data[0].xAxis_name %>",
    value: "<%= C3data[0].xAxis_value %>"
  },
  data: {
    name: "<%= C3data[0].data_name %>",
    value: <%- JSON.stringify(C3data[0].data_value) %>
  },
  range: {
    name: "<%= C3data[0].range_name %>",
    min: <%= C3data[0].range_min %>,
    max: <%= C3data[0].range_max %>,
    minimum: <%= C3data[0].range_minimum %>,
    maximum: <%= C3data[0].range_maximum %>
  }
};
</script>