<div class="story-box storyCtrl" ng-class="{ hideBox: storyModel.showStoryBox }">
	<div class="relative">
		<div class="story-box-hot-key">
			<a class="btn btn-default btn-sm mrs" ng-click="showStoryBox()">
				<i class="glyphicon glyphicon-resize-full"></i>
			</a>
			<a class="btn btn-info btn-sm mrs">
				<i class="glyphicon glyphicon-pencil"></i>
			</a>
			<a class="btn btn-success btn-sm mrs">
